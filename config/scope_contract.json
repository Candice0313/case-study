    "coding", "programming", "schoolwork", "homework", "medical", "health",
    "legal", "law", "finance", "investment", "politics", "religion",
    "other_appliances", "washer", "dryer", "oven", "stove", "microwave",
    "lawn", "garden", "power tool", "off_topic", "joke", "weather"
