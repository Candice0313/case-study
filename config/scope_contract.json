{
  "version": "1.0",
  "domain": "partselect",
  "allowed_appliance_types": ["refrigerator", "dishwasher"],
  "allowed_intents": [
    "part_lookup",
    "model_lookup",
    "compatibility_check",
    "installation_guidance",
    "troubleshooting",
    "order_support",
    "warranty_inquiry",
    "shipping_tracking",
    "return_exchange",
    "model_number_help",
    "diagram_manual"
  ],
  "allowed_entities": {
    "appliance_type": ["refrigerator", "dishwasher", "fridge", "ice maker"],
    "identifiers": ["part_number", "model_number", "brand", "symptom", "serial_number"]
  },
  "allowed_brands": [
    "whirlpool", "ge", "general electric", "samsung", "lg", "maytag",
    "kitchenaid", "bosch", "frigidaire", "kenmore", "electrolux", "hotpoint"
  ],
