  "part_number_pattern": "^[A-Z0-9\\-]{4,20}$",
  "model_number_pattern": "^[A-Z0-9\\-]{4,25}$",
  "in_scope_keywords": [
    "part", "parts", "model", "models", "compatible", "compatibility", "fit", "fits",
    "install", "installation", "replace", "replacement", "repair", "fix", "broken",
    "refrigerator", "fridge", "freezer", "dishwasher", "symptom", "problem", "issue",
    "order", "track", "shipping", "delivery", "warranty", "return", "exchange",
    "manual", "diagram", "guide", "video", "instruction", "how to",
    "water", "ice", "filter", "leak", "leaking", "noise", "loud", "not cooling",
    "cold", "warm", "cooling", "door", "seal", "gasket", "motor", "compressor", "thermostat", "valve"
  ],
  "symptom_keywords": [
    "not cooling", "not filling", "leaking", "leak", "noise", "loud", "ice", "water",
    "door", "seal", "light", "running", "cycling", "freezing", "frost", "drain",
    "not working", "isn't working", "broken", "problem", "issue"
  ],
  "clarification_triggers": {
    "min_words": 2,
    "requires_model_for_compatibility": true
  }
}
